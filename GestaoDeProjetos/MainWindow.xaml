                VerticalAlignment="Center">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="20">
                        <Label Content="Projetos Associados:" Foreground="{DynamicResource themeColor}" FontWeight="Bold"/>
                        <DataGrid Name="dgProjectTec" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="1"
                                  Background="{DynamicResource fundo}" AlternatingRowBackground="#FFBBC9D3" HorizontalGridLinesBrush="{x:Null}"
                                  VerticalGridLinesBrush="{x:Null}" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Path=Id}"/>
                                <DataGridTextColumn Header="Nome" Width="250" Binding="{Binding Path=Nome}"/>
                                <DataGridTemplateColumn Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Name="btnConsultarProjetoTec"  Style="{StaticResource ButtonRound}" Height="30" 
                                                Width="30" Background="{StaticResource gradiente}" VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" Click="BtnConsultarProjetoTec_Click">

                                                <fa5:ImageAwesome Icon="Solid_Search" Height="20" Width="20" Foreground="#2f2f2f"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="btnFecharProjetos" Margin="0,20,0,0" Content="Fechar" Background="{StaticResource gradiente}" FontWeight="Bold"
                                Style="{StaticResource ButtonRound}" Foreground="{DynamicResource themeColor}" Width="80" 
                                Click="BtnFecharProjetos_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!--Colaboradores associados a uma tecnologia-->
        <Grid Name="colaboradoresAssociados" Grid.RowSpan="3" Panel.ZIndex="2" Visibility="Hidden">
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinWidth="250"
                Background="{DynamicResource fundo}" 
                BorderBrush="{DynamicResource themeColor}" 
                BorderThickness="1" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="20">
                        <Label Content="Colaboradores Associados:" Foreground="{DynamicResource themeColor}" FontWeight="Bold"/>
                        <DataGrid Name="dgColabTec" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" Grid.Column="1"
                                  Background="{DynamicResource fundo}" AlternatingRowBackground="#FFBBC9D3" HorizontalGridLinesBrush="{x:Null}"
                                  VerticalGridLinesBrush="{x:Null}" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NIF" Width="90" Binding="{Binding Path=Nif}"/>
                                <DataGridTextColumn Header="Nome" Width="250" Binding="{Binding Path=Nome}"/>
                                <DataGridTemplateColumn Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Name="btnConsultarColabTec"  Style="{StaticResource ButtonRound}" Height="30" 
                                                Width="30" Background="{StaticResource gradiente}" VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" Click="BtnConsultarColabTec_Click">

                                                <fa5:ImageAwesome Icon="Solid_Search" Height="20" Width="20" Foreground="#2f2f2f"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Name="btnFecharColaboradores" Margin="0,20,0,0" Content="Fechar" Background="{StaticResource gradiente}" 
                                FontWeight="Bold" Style="{StaticResource ButtonRound}" Foreground="{DynamicResource themeColor}" 
                                Width="80" Click="BtnFecharColaboradores_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!--Inserir nova tecnologia-->
        <Grid Name="inserirTec" Grid.RowSpan="3" Panel.ZIndex="2" Visibility="Hidden">
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinWidth="250"
                Background="{DynamicResource fundo}" 
                BorderBrush="{DynamicResource themeColor}" 
                BorderThickness="1" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <StackPanel Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Label Content="Nome: " FontWeight="Bold" Foreground="{DynamicResource themeColor}"/>
                            <TextBox Name="txtbInserirTecNome" Width="250" Foreground="{DynamicResource themeColor}"
                                     Background="{DynamicResource fundo}" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Name="stckAreaTec">
                            <Label Content="Área: " FontWeight="Bold" Foreground="{DynamicResource themeColor}"/>
                            <ComboBox Name="cmbArea" Width="200" VerticalContentAlignment="Center" HorizontalAlignment="Left" 
                                      SelectionChanged="CmbFuncao_SelectionChanged" SelectedValuePath="Content">
                                <ComboBoxItem Content="Programação"/>
                                <ComboBoxItem Content="Redes"/>
                                <ComboBoxItem Content="Operacional técnico"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="Custo da Tecnologia: " FontWeight="Bold" Foreground="{DynamicResource themeColor}"/>
                            <TextBox Name="txtbInserirTecCusto" Width="80" Foreground="{DynamicResource themeColor}"
                                     Background="{DynamicResource fundo}" VerticalContentAlignment="Center" 
                                     PreviewTextInput="TxtbInserirTecCusto_PreviewTextInput"/>
                            <Label Content="€" Foreground="{DynamicResource themeColor}"/>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="btnOkInserirTec" Margin="0,20,10,0" Content="OK" Background="{StaticResource gradiente}" 
                                    FontWeight="Bold" Style="{StaticResource ButtonRound}" Foreground="{DynamicResource themeColor}" 
                                    Width="80" Click="BtnOkInserirTec_Click"/>
                            <Button Name="btnCancelarInserirTec" Margin="10,20,0,0" Content="Cancelar" Background="{StaticResource gradiente}" 
                                    FontWeight="Bold" Style="{StaticResource ButtonRound}" Foreground="{DynamicResource themeColor}" 
                                    Width="80" Click="BtnCancelarInserirTec_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
